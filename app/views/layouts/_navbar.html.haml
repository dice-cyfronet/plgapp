%header.navbar.navbar-default
  .container
    = link_to t('code_name'), root_path, class: 'navbar-brand'

    - if user_signed_in?
      %ul.nav.navbar-nav
        = nav_link(controller: :apps) do
          = link_to t('apps.title'), apps_path

    %ul.nav.navbar-nav.pull-right
      %li.locale
        .btn-group.btn-group-xs.navbar-btn
          = locale_link(:pl)
          = locale_link(:en)
      - if user_signed_in?
        %p.navbar-text= current_user.name
        = nav_link controller: :help do
          = link_to help_path,
                    data: { placement: 'bottom' },
                    title: t('help.title') do
            = icon('question')
        %li
          = link_to destroy_user_session_path,
                    data: { placement: 'bottom' },
                    title: t('logout'), method: :delete do
            = icon('sign-out')
      - else
        .navbar-form.navbar-left
          = link_to user_omniauth_authorize_path(:open_id),
                    class: 'btn btn-primary' do
            = icon('sign-in', t('plgrid_sign_in'))

