= image_tag("logo-big.png", border: 0, id: 'logo-big')

.bs-docs-section
  %h1.page-header
    = t('home.title')
  %p.text-center
    = t('home.desc')

  %h1.page-header
    = t('home.apps-title')

.bs-docs-section
  .row.apps-preview
    - App.all.each do |app|
      .col-md-4.app-preview
        - if app.logo.blank?
          = icon('cubes', '', class: 'appl-icon')
        - else
          = image_tag(app.logo_url, class: 'user-logo')

        %h4.text-center
          = link_to app.name, root_url(subdomain: app.full_subdomain)


