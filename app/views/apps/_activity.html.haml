%li
  .timeline-badge
    = icon('cloud-upload')
  .timeline-panel
    .timeline-heading
      %h4.timeline-title
        = activity.author.name
        %small
          = t("activity.#{activity.activity_type}")
          (#{time_ago_with_tooltip(activity.created_at)})
    .timeline-body
      - unless activity.message.blank?
        = activity.message
